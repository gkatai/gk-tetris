{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "vite.config.js"]
}
